/* pages/mypage/mypage.wxss */
/* header */
.header {
  background: #dff;
  height: 500rpx;
  width: 100%;
}
.header-top {
  flex: 3;
  padding:5rpx 5rpx 0 5rpx;

}
.header-bottom {
  flex: 1;
  justify-content: space-between;
  align-items: flex-end;
  padding:0 5rpx 5rpx 5rpx;
}


.icon {
  width: 45rpx;
  height: 45rpx;
}
.icon-circle {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.3);
  text-align: center;
  line-height: 80rpx;
}
.header-user {
  align-items: center;
}
.avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  background: blueviolet;
  display: inline-block;
}

.text {
  color: black;
  font-size: 50rpx;
  display: inline-block;
  margin-left: 20rpx;
}

/* mark */
.mark {
  justify-content: space-evenly;
  align-items: center;
  height: 200rpx;
}
.number {
  display: inline;
}

.whitespace {
  height: 60rpx;
  background: #d4d4d4;
}

/* tab */
.swiper-tab {
  width: 100%;
  border-bottom: 2rpx solid #ccc;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
}

.swiper-tab-item {
  width: 30%;
  color: #434343;
}

.active {
  color: #000;
  border-bottom: 8rpx solid #000;
}
 

/* list */
.list {
  height: 80rpx;
}
.list:not(:last-child) {
  border-bottom: 1rpx solid #d4d4d4;
}
.list-title,
.list-content {
  display: inline;
  margin-left: 30rpx;
}
.list-imgs {
  width: 200rpx;
  height: 200rpx;
  background: red;
  border: 2px solid #fff;
}

 