/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.bc_green {
  background: green;
}

.bc_red {
  background: red;
}

.bc_blue {
  background: blue;
}

.bc_yellow {
  background: yellow;
}

.flex {
  display: flex;
}

.flex-row {
  flex-direction: row;
}

.flex-row-re {
  flex-direction: row-reverse;
}

.flex-column {
  flex-direction: column;
}

.flex-column-re {
  flex-direction: column-reverse;
}

.flex-wrap {
  flex-wrap: wrap;
}

